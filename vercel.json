{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/fetch",
      "dest": "/api/fetch.js"
    },
    {
      "src": "/api/fetch/(.*)",
      "dest": "/api/fetch.js?id=$1"
    },
    {
      "src": "/api/proxy",
      "dest": "/api/proxy.js"
    },
    {
      "src": "/api/proxy/(.*)",
      "dest": "/api/proxy.js?url=$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Range, User-Agent, X-Requested-With"
        },
        {
          "key": "Access-Control-Expose-Headers",
          "value": "Content-Length, Content-Range"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/fetch/:id",
      "destination": "/api/fetch.js?id=:id"
    },
    {
      "source": "/api/proxy/:url*",
      "destination": "/api/proxy.js?url=:url*"
    }
  ],
  "redirects": [
    {
      "source": "/api",
      "destination": "/api/fetch",
      "permanent": false
    }
  ],
  "env": {
    "NODE_VERSION": "24.x"
  },
  "regions": ["iad1"],
  "cleanUrls": true,
  "trailingSlash": false
}